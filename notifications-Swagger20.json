                        "name": "aId",
                        "in": "path",
                        "required": true,
                        "description": "App Id",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "mId",
                        "in": "path",
                        "required": true,
                        "description": "Merchant Id",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": ""
                    }
                },
                "security": [],
                "requestBody": {
                    "$ref": "#/components/requestBodies/AppNotification"
                }
            }
        },
        "/v3/apps/{aId}/devices/{dId}/notifications": {
